{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "target": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "types": ["node"],
    "lib": ["es2017"],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
